	urldate = {2020-04-13},
	journal = {Psychophysiology},
	author = {Mayo, Oded and Gordon, Ilanit},
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/psyp.13574},
	keywords = {dynamical systems, interpersonal synchrony, physiological synchrony, meta stability},
