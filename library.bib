	number = {38},
	urldate = {2021-03-08},
	journal = {Journal of Neuroscience},
	author = {Voytek, Bradley and Kramer, Mark A. and Case, John and Lepage, Kyle Q. and Tempesta, Zechari R. and Knight, Robert T. and Gazzaley, Adam},
	month = sep,
	year = {2015},
	pmid = {26400953},
	note = {Publisher: Society for Neuroscience
Section: Articles},
	keywords = {EEG, 1/f, electrocorticography, neural noise, phase/amplitude coupling, working memory},
	pages = {13257--13265},
	file = {Full Text PDF:C\:\\Users\\wiltshir\\Zotero\\storage\\AZMNJWSU\\Voytek et al. - 2015 - Age-Related Changes in 1f Neural Electrophysiolog.pdf:application/pdf;Snapshot:C\:\\Users\\wiltshir\\Zotero\\storage\\ISIWTUIG\\13257.html:text/html},
