	pages = {145--171},
	file = {Full Text PDF:C\:\\Users\\wiltshir\\Zotero\\storage\\WJTZ4ZMM\\Fusaroli and Tylén - 2016 - Investigating Conversational Dynamics Interactive.pdf:application/pdf;Full Text PDF:C\:\\Users\\wiltshir\\Zotero\\storage\\9BZ4Y5IN\\Fusaroli and Tylén - 2016 - Investigating Conversational Dynamics Interactive.pdf:application/pdf;Snapshot:C\:\\Users\\wiltshir\\Zotero\\storage\\9E2Q6BF8\\cogs.html:text/html;Snapshot:C\:\\Users\\wiltshir\\Zotero\\storage\\EGS2K465\\cogs.html:text/html},
