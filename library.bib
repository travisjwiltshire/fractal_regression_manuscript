@article{zhangCriticalDiversityDivided2018,
	title = {Critical diversity: {Divided} or united states of social coordination},
	volume = {13},
	issn = {1932-6203},
	shorttitle = {Critical diversity},
	url = {https://dx.plos.org/10.1371/journal.pone.0193843},
