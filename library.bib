	file = {Full Text PDF:C\:\\Users\\wiltshir\\Zotero\\storage\\ZQATX2FQ\\Zhang et al. - 2019 - Connecting empirical phenomena and theoretical mod.pdf:application/pdf;Snapshot:C\:\\Users\\wiltshir\\Zotero\\storage\\38KTBKTT\\rsif.2019.html:text/html},
}

